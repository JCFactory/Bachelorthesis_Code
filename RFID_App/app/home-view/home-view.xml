<Page class="page"
    xmlns:lv="nativescript-ui-listview"
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:PullRefresh="nativescript-pulltorefresh" navigatingTo="onNavigatingTo">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" background-color="green" text="Medication"></Label>
    </ActionBar>
    <PullRefresh:PullToRefresh refresh="refreshList">
        <GridLayout class="page-content">
            <lv:RadListView items="{{drugs}}">
                <lv:RadListView.listViewLayout>
                    <lv:ListViewLinearLayout scrollDirection="Vertical"/>
                </lv:RadListView.listViewLayout>
                <lv:RadListView.itemTemplate>
                    <StackLayout>
                        <GridLayout columns="*,*">
                            <Button text="{{name}}" class="btn" col="0" colSpan="2" tap="onTap"/>
                            <Button stretch="none" class="circle" col="1"/>
                        </GridLayout>
                    </StackLayout>
                </lv:RadListView.itemTemplate>
            </lv:RadListView>
        </GridLayout>
        <!-- <ListView items="{{drugs}}"><ListView.itemTemplate><GridLayout columns="*,*"><Label text="{{name}}" class="btn" col="0" colSpan="2" tap="onTap"/><Label stretch="none" class="circle" col="1"/></GridLayout></ListView.itemTemplate></ListView> -->
    </PullRefresh:PullToRefresh>
</Page>
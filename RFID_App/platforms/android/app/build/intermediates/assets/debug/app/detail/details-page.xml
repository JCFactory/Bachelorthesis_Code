<Page class="page" navigatingTo="loaded"
    xmlns="http://schemas.nativescript.org/tns.xsd">
    <ActionBar class="action-bar">
        <Label class="action-bar-title" background-color="green" text="Details"></Label>
        <NavigationButton text="Go Back" ios:visibility="collapsed" android.systemIcon="ic_menu_back" tap="onNavBtnTap"/>
    </ActionBar>
    <GridLayout rows="50, 50, 50, 50, 50, 50" columns="*, *">
        <GridLayout.itemTemplate>
            <Label text="ID" col="0" row="0" class="detail"/>
            <Label text="{{id}}" col="1" row="0" class="detail" textWrap="true"/>
            <Label text="Name" col="0" row="1" class="detail"/>
            <Label text="{{name}}" col="1" row="1" class="detail" textWrap="true"/>
            <Label text="Countrycode" col="0" row="2" class="detail"/>
            <Label text="{{countryCode}}" col="1" row="2" class="detail" textWrap="true"/>
            <Label text="Size" col="0" row="3" class="detail"/>
            <Label text="{{size}}" col="1" row="3" class="detail" textWrap="true"/>
            <Label text="Location" col="0" row="4" class="detail"/>
            <Label text="{{location}}" col="1" row="4" class="detail" textWrap="true"/>
            <Label text="TimeStamp" col="0" row="5" class="detail"/>
            <Label text="{{timeStamp}}" col="1" row="5" class="detail" textWrap="true"/>
        </GridLayout.itemTemplate>
    </GridLayout>
</Page>